{
  "extends": "@kit/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "~/config/*": ["./config/*"],
      "~/components/*": ["./components/*"],
      "~/types/*": ["./types/*"],
      "~/lib/*": ["./lib/*"],
      "~/actions/*": ["./actions/*"],
      "~/services/*": ["./services/*"],
      "~/hooks/*": ["./hooks/*"],
      "~/store/*": ["./store/*"],
      "~/data/*": ["./data/*"],
      "~/utils/*": ["./utils/*"]
    },
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "*.ts",
    "*.tsx",
    "./config/**/*.ts",
    "components/**/*",
    "lib/**/*.ts",
    "app"
  ],
  "exclude": ["node_modules", ".next"]
}
